{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2018",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "skipLibCheck": true
  },
  "include": [
    "tests/bdd/**/*",
    "tests/bdd/jest.d.ts",
    "app/**/*",
    "components/**/*",
    "utils/**/*",
    "constants/**/*"
  ],
  "exclude": ["node_modules"]
}
